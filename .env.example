# Database — Railway auto-sets DATABASE_URL for the Postgres plugin
DATABASE_URL=postgresql://user:password@localhost:5432/survivor_fantasy

# JWT Secret — generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-64-char-hex-string

# Commissioner registration key — share this with whoever should be commissioner
COMMISSIONER_KEY=your-secret-commissioner-key

# App settings
DEBUG=false
APP_NAME=Survivor Fantasy Tracker
ACCESS_TOKEN_EXPIRE_MINUTES=1440
